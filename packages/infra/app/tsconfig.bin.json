{
    "extends": "../../../tsconfig.base",
    "compilerOptions": {
        "baseUrl": "./src/",
        "module": "commonjs",
        "outDir": "./dist",
        "noEmit": false,
        "sourceMap": false
    },
    "include": [
        "src/**/*",
        "node_modules/@common/**/*",
        "node_modules/@infra/**/*",
        "node_modules/@modules/**/*"
    ],
    "exclude": [
        "*.unit.ts",
        "*.spec.ts",
        "**/test/**/*"
    ]
}
