{
    "name": "@bobs-payroll/app",
    "version": "1.0.0",
    "author": "Alexandre Djerbetian",
    "license": "ISC",
    "description": "Agile Software Development - Principles, Pattern, and Practices - Case Study 1 - The Payroll System",
    "scripts": {
        "run": "ts-node --transpile-only src/main.ts",
        "build": "tsc --project tsconfig.json",
        "test": "npm run build && npm run test:fast:unit && npm run test:fast:integration && npm run test:fast:e2e",
        "test:unit": "npm run build && npm run test:fast:unit",
        "test:unit:watch": "npm run build && npm run test:unit -- --watch",
        "test:integration": "npm run build && npm run test:fast:integration",
        "test:e2e": "npm run build && npm run test:fast:e2e",
        "test:todo": "npm run build && cucumber-js --tags \"@todo\"",
        "test:fast:unit": "mocha ./src/**/*.unit.ts",
        "test:fast:integration": "mocha ./**/*.spec.ts",
        "test:fast:e2e": "cucumber-js --tags \"not @todo\""
    },
    "dependencies": {
        "@bobs-payroll/mongo": "^1.0.0",
        "@bobs-payroll/common": "^1.0.0",
        "@bobs-payroll/router": "^1.0.0",
        "lodash": "^4.17.15",
        "moment": "^2.24.0",
        "mongodb": "^3.3.2"
    },
    "devDependencies": {
        "@types/chai": "^4.2.3",
        "@types/chai-as-promised": "^7.1.2",
        "@types/cucumber": "^4.0.7",
        "@types/lodash": "^4.14.141",
        "@types/mocha": "^5.2.7",
        "@types/mongodb": "^3.3.3",
        "@types/node": "^12.7.8",
        "@types/sinon": "^7.0.13",
        "@types/sinon-chai": "^3.2.3",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "cucumber": "^5.1.0",
        "mocha": "^6.2.1",
        "nyc": "^14.1.1",
        "sinon": "^7.5.0",
        "sinon-chai": "^3.3.0",
        "ts-node": "8.4.0"
    }
}
